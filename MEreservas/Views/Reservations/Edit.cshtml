@model MEreservas.Models.Reservation

@{
    ViewData["Title"] = "Editar Reserva";
}

<div class="container py-3">

    <h2 class="mb-3">
        <i class="bi bi-pencil-square me-2"></i>Editar Reserva
    </h2>
    <hr />

    @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })

    <form asp-action="Edit" method="post" class="mt-3">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <!-- SALA -->
        <div class="mb-3">
            <label asp-for="RoomId" class="form-label fw-semibold">Sala</label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-door-closed"></i></span>
                <select class="form-select" asp-for="RoomId" asp-items="ViewBag.Rooms"></select>
            </div>
            <span class="text-danger" asp-validation-for="RoomId"></span>
        </div>

        <!-- DATA + HORAS -->
        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="form-label fw-semibold">Data</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-calendar-event"></i></span>
                    <input type="date" class="form-control" asp-for="Start" asp-format="{0:yyyy-MM-dd}" />
                </div>
                <span class="text-danger" asp-validation-for="Start"></span>
            </div>

            <div class="col-md-3 mb-3">
                <label class="form-label fw-semibold">Início</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-clock"></i></span>
                    <input type="time" class="form-control" name="HoraInicio" value="@Model.Start.ToString("HH\\:mm")" />
                </div>
            </div>

            <div class="col-md-3 mb-3">
                <label class="form-label fw-semibold">Fim</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-clock-history"></i></span>
                    <input type="time" class="form-control" name="HoraFim" value="@Model.End.ToString("HH\\:mm")" />
                </div>
            </div>
        </div>

        <!-- SOLICITANTE -->
        <div class="mb-3">
            <label asp-for="Requester" class="form-label fw-semibold">Solicitante</label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-person"></i></span>
                <input class="form-control" asp-for="Requester" />
            </div>
            <span class="text-danger" asp-validation-for="Requester"></span>
        </div>

        <!-- MOTIVO -->
        <div class="mb-3">
            <label asp-for="Subject" class="form-label fw-semibold">Motivo</label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-chat-left-dots"></i></span>
                <input class="form-control" asp-for="Subject" />
            </div>
            <span class="text-danger" asp-validation-for="Subject"></span>
        </div>

        <hr class="my-4" />

        <!-- BOTÕES -->
        <div class="d-flex gap-2 flex-wrap">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save me-1"></i> Guardar Alterações
            </button>

            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-x-circle me-1"></i> Cancelar
            </a>

            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger ms-auto">
                <i class="bi bi-trash me-1"></i> Eliminar
            </a>
        </div>
    </form>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
