@{
    ViewData["Title"] = "Autorização necessária";
    var actionType = (string)ViewBag.ActionType ?? "edit";
}

<div class="row justify-content-center mt-4">
    <div class="col-12 col-md-8 col-lg-6">
        <div class="card shadow-sm border-0 rounded-3">
            <div class="card-body p-4">
                <div class="d-flex align-items-center mb-3">
                    <span class="badge bg-warning text-dark me-2">Permissão</span>
                    <h5 class="card-title mb-0">Insira a senha mestre para continuar</h5>
                </div>
                <p class="text-muted mb-4">
                    Esta ação requer autorização adicional porque a reserva não pertence ao utilizador atual.
                </p>

                @* Mensagem de erro vinda do Controller, se existir *@
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger" role="alert">
                        @ViewBag.Error
                    </div>
                }

                <form asp-action="MasterPasswordPrompt" method="post" autocomplete="off">
                    @Html.AntiForgeryToken()

                    <input type="hidden" name="actionType" value="@actionType" />
                    <input type="hidden" name="reservationId" value="@ViewBag.ReservationId" />

                    <div class="mb-3">
                        <label for="password" class="form-label">Senha mestre</label>
                        <input type="password"
                               class="form-control"
                               id="masterPassword"
                               name="masterPassword"
                               placeholder="Digite a senha mestre"
                               required
                               autofocus />
                        <div class="form-text">
                            Apenas administradores conhecem esta senha.
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            Confirmar
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            Cancelar
                        </a>
                    </div>
                </form>

                <hr class="my-4" />
                <small class="text-muted">
                    Ação solicitada: <strong>@(actionType == "delete" ? "Apagar" : actionType == "edit" ? "Editar" : actionType)</strong>.
                </small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Foca e seleciona o campo de password ao abrir
        (function () {
            const input = document.getElementById('masterPassword');
            if (input) {
                input.focus();
                input.select?.();
            }
        })();
    </script>
}
